@model IEnumerable<RoleToReturnDTO>

@{
    ViewData["Title"] = "Index";
   string? ViewDataMassage = ViewData["Massage"] as string;
}

<h1>All Roles</h1>


@if (!string.IsNullOrEmpty(TempData["Message"] as string ))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["Message"]</p>
    </div>
}

<form>

    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search By Name" type="text" class="form-control" name="SearchInput" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-primary">Create Role</a>

</form>

<br />
<br />


@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    
                    <partial name="_ButtonPartialView" model="@item.Id" />

                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-success">
        <h4>
            There are No Roles :(
        </h4>
    </div>
}




